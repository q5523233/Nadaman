<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:text="屏幕显示" />

    <com.sm.nadaman.common.widget.MutiRadioGroup
            android:id="@+id/rg_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rg_display_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="12导单屏" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rg_display_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6导x2屏幕" />


    </com.sm.nadaman.common.widget.MutiRadioGroup>

    <View
            android:layout_marginTop="10dp"
            android:background="@color/pickerview_wheelview_textcolor_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:text="测量模式" />

    <com.sm.nadaman.common.widget.MutiRadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_mode_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="静息" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_mode_02"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行走" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_mode_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慢跑" />
    </com.sm.nadaman.common.widget.MutiRadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:text="单次测量时长" />

    <com.sm.nadaman.common.widget.MutiRadioGroup
            android:id="@+id/rg_measure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_measure_time_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="60s" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_measure_time_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30s" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_measure_time_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10s" />
    </com.sm.nadaman.common.widget.MutiRadioGroup>

    <View
            android:layout_marginTop="10dp"
            android:background="@color/pickerview_wheelview_textcolor_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:text="纸速( mm/s )" />

    <com.sm.nadaman.common.widget.MutiRadioGroup
            android:id="@+id/rg_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_speed_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.5 " />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_speed_02"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 " />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_speed_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 " />

    </com.sm.nadaman.common.widget.MutiRadioGroup>

    <View
            android:layout_marginTop="10dp"
            android:background="@color/pickerview_wheelview_textcolor_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:text="增益( 图形放大倍数 )" />

    <com.sm.nadaman.common.widget.MutiRadioGroup
            android:id="@+id/rg_gain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_gain_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x¼" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_gain_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x½" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_gain_03"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1" />

        <RadioButton
                android:layout_marginEnd="10dp"
                android:id="@+id/rb_gain_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2" />
    </com.sm.nadaman.common.widget.MutiRadioGroup>

    <View
            android:layout_marginTop="10dp"
            android:background="@color/pickerview_wheelview_textcolor_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_weight="1"
                android:id="@+id/tv_confirm"
                android:text="@string/confirm"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:background="@drawable/tv_bg_nopadding"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/tv_cancel"
                android:text="@string/cancel"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/tv_bg_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>